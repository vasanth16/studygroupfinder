%html
  %body
%h2{:class=>"header"} Details about #{@group.group_name}
%h4{:class=>"description text-success"}
  Location:
  =@group.location
%h4{:class=>"description text-success"}
  Members
  %table#participations{:class=>"list"}
    %tbody
      - @participations.each do |participation|
        %tr
          -@u = User.where(:id => participation.user_id)
          -@u.each do |u|
            %tr
              %td= u.email


