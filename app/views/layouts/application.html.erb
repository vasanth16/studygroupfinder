<!DOCTYPE html><%= favicon_link_tag asset_path('icon.ico') %>
<html lang="en">
  <head>
    <title>Groupfinder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% unless controller_name == "welcome" %>
    <%= render 'layouts/navbar' %>
  <% end %>

  <% if user_signed_in? %>
    <h3 align="center"> Welcome <%= current_user.first_name %>! </h3>
      
    <% end %>
    
    <%= yield %>
  </body>
</html>
